{
  "AllowedHosts": "*",
  "Serilog": {
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithEnvironmentUserName",
      "WithProcessId",
      "WithThreadId",
      "WithClientIp",
      "WithCorrelationId"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "SQLite",
        "Args": {
          "sqliteDbPath": "OnTrack.db",
          "tableName": "Logs",
          "maxDatabaseSize": 10000,
          "retentionPeriod": "365.00:00:00"
        }
      },
      {
        "Name": "Console"
      }
    ]
  },
  "Smtp": {
    "Enabled": false
  }
}